{% extends "base.html.twig" %}

{% block breadcrumb %}
  <li class="breadcrumb-item">
    <a href="{{ path('gatomlo_project_manager_all_projects')}}">Projets</a>
  </li>
  <li class="breadcrumb-item active"> {{project.name}}  </li>
{% endblock %}

{% block body %}

  {{ form_start(form) }}
  {{ form_row(form._token) }}
  {{ form_errors(form) }}
  {{ form_row(form.name) }}
  {{ form_row(form.description) }}
  {{ form_row(form.url) }}
  {{ form_row(form.endtime) }}
  {{ form_row(form.parent) }}


  <div class="tags" data-prototype="{{ form_widget(form.tags.vars.prototype)|e('html_attr') }}"></div>
  {% for tag in form.tags %}
    <span class="existingTags">{{ form_row(tag.name) }}</span>
  {% endfor %}

  {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}</br></br>


{% endblock %}
{% block scripts %}
<script src="{{ asset('js/addTags.js')}}"></script>
{% endblock %}
