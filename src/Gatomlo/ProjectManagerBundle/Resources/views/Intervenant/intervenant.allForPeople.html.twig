{% extends "base.html.twig" %}

{% block breadcrumb %}
  <li class="breadcrumb-item">
    <a href="{{ path('gatomlo_project_manager_all_peoples')}}">Contacts</a>
  </li>
  <li class="breadcrumb-item active">{{people.firstName}} {{people.lastName}} </li>
{% endblock %}

{% block body %}

<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link " href="{{ path('gatomlo_project_manager_one_people', { 'id': people.id }) }}">Coordonnées</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active"  href="{{ path('gatomlo_project_manager_all_intervenants_from_a_people', { 'peopleId': people.id,'isArchived':0 }) }}">Projets</a>
  </li>
  <li class="nav-item">
    <a class="nav-link"  href="{{ path('gatomlo_project_manager_all_intervenants_from_a_people', { 'peopleId': people.id,'isArchived':1 }) }}">Archives</a>
  </li>
</ul>

</br></br>

  <div class="card mb-3">
    <div class="card-header"><a class="float-right  btn btn-primary " href="{{ path('gatomlo_project_manager_add_Intervenant', { 'id': people.id, 'from':'people' }) }}"><i class="fas fa-plus-circle text-align-right"></i> Participation à un projet</a></div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered display responsive nowrap" id="intervenantDatatable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Projets</th>
              <th>Fonction</th>
              <th>Commentaire</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {% for intervenant in intervenants %}
              <tr>
                <td>{{intervenant.project.name}}</td>
                <td>{{intervenant.job.name}}</td>
                <td>{{intervenant.comment | raw }}</td>
                <td>
                  <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <i class="fas fa-cogs"></i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                      <a class="dropdown-item" href="{{ path('gatomlo_project_manager_edit_intervenant', { 'id': intervenant.id,'from':'people' }) }}"><i class="fas fa-pen"></i> Editer</a>
                      <a class="dropdown-item" href="{{ path('gatomlo_project_manager_delete_intervenant', { 'id': intervenant.id,'from':'people' }) }}"><i class="fas fa-trash-alt"></i> Supprimer</a>
                        <a class="dropdown-item" href="{{ path('gatomlo_project_manager_one_project', { 'id': intervenant.project.id }) }}"><i class="fas fa-eye"></i> Voir projet</a>
                    </div>
                  </div>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>

{% endblock %}

{% block scripts %}
  <script>
    $(document).ready(function() {
      $('#intervenantDatatable').DataTable({
        responsive: true,

      });
    });
  </script>
{% endblock %}
